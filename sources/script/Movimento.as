class script.Movimento {		public var obj_da_muovere;	public var pixel_spostamento;	public var perc_zoom;		function Movimento(obj) {		this.obj_da_muovere=obj;		this.pixel_spostamento=50;		this.perc_zoom=20;	}		public function scatto_destra() {		this.obj_da_muovere._x = this.obj_da_muovere._x+this.pixel_spostamento;	}	public function scatto_sinistra() {		this.obj_da_muovere._x = this.obj_da_muovere._x-this.pixel_spostamento;	}	public function scatto_alto() {		this.obj_da_muovere._y = this.obj_da_muovere._y-this.pixel_spostamento;	}	public function scatto_basso() {		this.obj_da_muovere._y = this.obj_da_muovere._y+this.pixel_spostamento;	}	public function scatto_zoom_in() {		if (this.obj_da_muovere._xscale<2000) {			this.obj_da_muovere._xscale = this.obj_da_muovere._xscale+this.perc_zoom;			this.obj_da_muovere._yscale = this.obj_da_muovere._yscale+this.perc_zoom;		}	}	public function scatto_zoom_out() {		if (this.obj_da_muovere._xscale>100) {			this.obj_da_muovere._xscale = this.obj_da_muovere._xscale-this.perc_zoom;			this.obj_da_muovere._yscale = this.obj_da_muovere._yscale-this.perc_zoom;				}	}	public function ruota_orario() {		this.obj_da_muovere._rotation = this.obj_da_muovere._rotation+45;	}		public function ruota_antiorario() {		this.obj_da_muovere._rotation = this.obj_da_muovere._rotation-45;	}		public function azzera(origx,origy) {		this.obj_da_muovere._xscale = 100;		this.obj_da_muovere._yscale = 100;		this.obj_da_muovere._x=origx;		this.obj_da_muovere._y=origy;		this.obj_da_muovere._rotation=0;	}}